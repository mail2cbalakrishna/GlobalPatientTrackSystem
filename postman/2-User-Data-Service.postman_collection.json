            {
              "key": "token",
              "value": "{{doctorToken}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{userDataServiceUrl}}/users/patients",
          "host": ["{{userDataServiceUrl}}"],
