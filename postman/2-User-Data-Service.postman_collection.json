{
  "info": {
    "name": "2. User Data Service (Port 8082)",
    "description": "User management and data operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{adminToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Register New User (Public)",
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"newpatient\",\n  \"password\": \"Patient@123\",\n  \"email\": \"newpatient@test.com\",\n  \"firstName\": \"New\",\n  \"lastName\": \"Patient\",\n  \"role\": \"PATIENT\"\n}"
        },
        "url": {
          "raw": "{{userDataServiceUrl}}/users/register",
          "host": ["{{userDataServiceUrl}}"],
          "path": ["users", "register"]
        }
      },
      "response": []
    },
    {
      "name": "Get User by Username (Public)",
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{userDataServiceUrl}}/users/username/patient1",
          "host": ["{{userDataServiceUrl}}"],
          "path": ["users", "username", "patient1"]
        }
      },
      "response": []
    },
    {
      "name": "Get User by ID (Admin/Owner)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{userDataServiceUrl}}/users/11",
          "host": ["{{userDataServiceUrl}}"],
          "path": ["users", "11"]
        }
      },
      "response": []
    },
    {
      "name": "Get Users by Role - DOCTOR",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{doctorToken}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{userDataServiceUrl}}/users/role/DOCTOR",
          "host": ["{{userDataServiceUrl}}"],
          "path": ["users", "role", "DOCTOR"]
        }
      },
      "response": []
    },
    {
      "name": "Get All Doctors (Doctor/Admin)",
