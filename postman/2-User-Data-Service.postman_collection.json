        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"patient1\",\n  \"email\": \"patient1.updated@test.com\",\n  \"firstName\": \"Patient\",\n  \"lastName\": \"One Updated\",\n  \"role\": \"PATIENT\"\n}"
        },
        "url": {
          "raw": "{{userDataServiceUrl}}/users/11",
          "host": ["{{userDataServiceUrl}}"],
          "path": ["users", "11"]
        }
      },
      "response": []
    },
    {
      "name": "Activate User (Admin)",
